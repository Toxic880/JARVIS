{
  "name": "jarvis",
  "private": true,
  "version": "2.0.0",
  "description": "JARVIS - Your Personal AI Assistant",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "start": "node jarvis.cjs",
    "setup": "node jarvis.cjs setup",
    "dev": "vite --port 3000",
    "build": "vite build",
    "doctor": "node jarvis.cjs doctor",
    "electron": "electron .",
    "package": "npm run build && electron-builder"
  },
  "build": {
    "appId": "ai.jarvis.desktop",
    "productName": "JARVIS",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "server",
        "to": "server",
        "filter": ["dist/**/*", "package.json", "node_modules/**/*"]
      }
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icons",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
